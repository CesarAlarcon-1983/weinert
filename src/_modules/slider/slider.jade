mixin slider(klass, mode)
    if mode == 'normal'
        ._slider(class=klass)
            if block
                block
    if mode == 'three'
        ._slider-three(class=klass)
            if block
                block
    if mode == 'alt'
        ._slider-alt(class=klass)
            if block
                block

    if mode == 'all'
        ._slider-all(class=klass)
            if block
                block

    if mode == 'fourSlides'
        ._slider-fourslides(class=klass)
            if block
                block

    if mode == 'thumbnails'
        ._slider-thumbnail(class=klass)
            if block
                block
